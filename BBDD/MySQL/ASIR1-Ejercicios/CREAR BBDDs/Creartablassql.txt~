1BASE
CREATE DATABASE (NOMBRE); 	#PARA CREAR LA TABLA#
USE (NOMBRE)			#PARA USARLA tienes que poner el mismo nombre que con el comando anterior#

CREATE TABLE (NOMBRE) (
	(NOMBRE DE CADA COLUMNA)(MODO VALORES) NOT NULL SIEMPRE,
) ENGINE=INODB;

2MODO DE COLUMNAS:
SMALLINT				#NUMEROPEQUEÃ‘O#
INT					#NUMEROENTERO#
VARCHAR					#LETRAS#
DATE					#FECHA#

3VALORES:
NOT NULL				#NO ADMITE NULOS#
UNSIGNED				#NO ADMITE NEGATIVOS (SOLO EN NUMEROS)#
PRIMARY KEY
REFERENCES (TABLA(NOMBREDECOLUMNA))	#CLAVES FORANEAS, ASOCIAR COLUMNA#
ON DELETE CASCADE ON UPDATE CASCADE	#PARA QUE SE ACTUALIZE JUNTO CON SU ASOCIADA#
