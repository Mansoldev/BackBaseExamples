SET SERVEROUTPUT ON
DECLARE
NUM INT:=0;
PRIMO INT:=0;
ES boolean;
PRIMOS VARCHAR(255);
BEGIN
NUM:=&EL_NUMERO_A_COMPROBAR;
PRIMO:=NUM-1;
ES:=true;

WHILE PRIMO>NUM/2 LOOP
	IF MOD(NUM,PRIMO)=0 THEN
	ES:=false;
	PRIMOS:=PRIMOS||' '||PRIMO;
	END IF;
	PRIMO:=PRIMO-1;
END LOOP;

IF ES=false THEN
DBMS_OUTPUT.PUT_LINE ('EL NUMERO NO ES PRIMO Y SUS DIVISORES SON'||PRIMOS);
ELSE
DBMS_OUTPUT.PUT_LINE ('EL NUMERO ES PRIMO');
END IF;
END;
/
