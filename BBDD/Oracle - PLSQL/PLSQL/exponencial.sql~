SET SERVEROUTPUT ON
DECLARE

BASE INT;
EXPO INT;
POTENCIA INT:=1;
TEXTOEXPO VARCHAR(255);

BEGIN
BASE:=&BASE;
EXPO:=&EXPO;

IF EXPO<0 THEN
	DBMS_OUTPUT.PUT_LINE('El programa no calcula potencias negativas');
ELSE
	FOR I IN 1..EXPO LOOP
		POTENCIA:=POTENCIA*BASE;
	END LOOP;
	DBMS_OUTPUT.PUT_LINE(BASE||'Elevado a '||EXPO||'Es '||POTENCIA);
END IF;

END;
/
